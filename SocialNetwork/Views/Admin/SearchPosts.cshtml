@model IEnumerable<SocialNetwork.Models.Post>

@{
    ViewBag.Title = "SearchPosts";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { postId = item.PostID }) |
                    @Html.ActionLink("Delete", "Delete", new { postId = item.PostID })
                </td>
            </tr>
        }

    </table>
</div>

@section Header{
    <header class="major">
        <h2>
            Post search results
        </h2>
    </header>
}


