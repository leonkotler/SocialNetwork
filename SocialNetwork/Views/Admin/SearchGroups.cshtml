@model IEnumerable<SocialNetwork.Models.Group>

@{
    ViewBag.Title = "SearchGroups";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div>
    <table class="table">
        <tr>      
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit","Groups", new { groupId = item.GroupID },null) |               
                    @Html.ActionLink("Delete", "Delete", "Groups", new { groupId = item.GroupID },null)
                </td>
            </tr>
        }

    </table>
</div>


@section Header{
    <header class="major">
        <h2>
            Group search results
        </h2>
        <input type="button" value="Return to search" onclick="@("window.location.href='" + @Url.Action("AdvancedSearch", "Admin") + "'");" />
    </header>
}
